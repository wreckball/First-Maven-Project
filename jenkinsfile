pipeline {
    agent any
    stages {
        stage('git checkout') {
            steps {
                checkout changelog: false, scm: [$class: 'GitSCM', branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/wreckball/First-Maven-Project.git']]]
            }
        }
        
        stage('build') {
            steps{
                sh "mvn clean package"
            }
        }
        
        stage('build docker image') {
            steps {
                sh "docker build -t xueszrd/demowebapp:1.0 ."
            }
        }
        
        stage('Docker login and push') {
            steps {
                //withCredentials([string(credentialsId: '53a3c4be-82fc-48ff-8e2c-31e0bf2a8dc4', variable: 'dockerPassword')]) {
                   // sh "docker login --username xueszrd --password ${dockerPassword}"   
                //}
                sh '''  docker login --username xueszrd --password Pi89KjyUV653Acv
                        docker push xueszrd/demowebapp:1.0'''
            }
        }
        
        stage('deploy the app on to the server') {
            steps {
                sshagent(['dockerdeploye']) {
                    sh """
                        ssh -o StrictHostKeyChecking=no xuesz@192.168.1.103 docker rm f demowebapp || true
                        ssh -o StrictHostKeyChecking=no xuesz@192.168.1.103 docker run -d -p 8080:8080 --name demowebapp xueszrd/demowebapp:1.0
                    """
                }
            }
        }
    }
}
